<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <!-- Start WOWSlider.com HEAD section -->
        <link rel="stylesheet" type="text/css" href="~/engine1/style.css" />
        <script type="text/javascript" src="~/engine1/jquery.js"></script>
        <!-- End WOWSlider.com HEAD section -->
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        <img id="img_logo" alt="Logo" src="@Url.Content("~/Images/logo.jpg")" />
                        @Html.ActionLink("Colombo Friends in need", "Index", "Home")
                    </p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        
        <div id="body">
            <div id="slider">
                <!-- Start WOWSlider.com BODY section -->
                <div id="wowslider-container1">
                    <div class="ws_images">
                        <ul>
                            <li><img src="~/data1/images/img_4245.jpg" alt="IMG_4245" title="IMG_4245" id="wows1_0" /></li>
                            <li><img src="~/data1/images/img_4246.jpg" alt="IMG_4246" title="IMG_4246" id="wows1_1" /></li>
                            <li><img src="~/data1/images/img_4248.jpg" alt="IMG_4248" title="IMG_4248" id="wows1_2" /></li>
                            <li><img src="~/data1/images/img_4252.jpg" alt="carousel slider" title="IMG_4252" id="wows1_3" /></a></li>
                            <li><img src="~//images/img_4253.jpg" alt="IMG_4253" title="IMG_4253" id="wows1_4" /></li>
                        </ul>
                    </div>
                    <div class="ws_bullets">
                        <div>
                            <a href="#" title="IMG_4245"><span><img src="~/data1/tooltips/img_4245.jpg" alt="IMG_4245" />1</span></a>
                            <a href="#" title="IMG_4246"><span><img src="~/data1/tooltips/img_4246.jpg" alt="IMG_4246" />2</span></a>
                            <a href="#" title="IMG_4248"><span><img src="~/data1/tooltips/img_4248.jpg" alt="IMG_4248" />3</span></a>
                            <a href="#" title="IMG_4252"><span><img src="~/data1/tooltips/img_4252.jpg" alt="IMG_4252" />4</span></a>
                            <a href="#" title="IMG_4253"><span><img src="~/data1/tooltips/img_4253.jpg" alt="IMG_4253" />5</span></a>
                        </div>
                    </div><div class="ws_script" style="position:absolute;left:-99%"><a href="http://wowslider.com">full width slider</a> by WOWSlider.com v8.0</div>
                    <div class="ws_shadow"></div>
                </div>
                <script type="text/javascript" src="engine1/wowslider.js"></script>
                <script type="text/javascript" src="engine1/script.js"></script>
                <!-- End WOWSlider.com BODY section -->
            </div>
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p align="center">&copy; @DateTime.Now.Year - Created by Vavuniya Campus University of Jaffna</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
